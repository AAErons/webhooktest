{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"strict": true,
		"outDir": "dist",
		"types": ["node"],
		"resolveJsonModule": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist"]
}

